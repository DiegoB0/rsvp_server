    "definitions": {
        "types.CreateTablePayload": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "capacity": {
                    "type": "integer",
                    "example": 10
                },
                "name": {
                    "type": "string",
                    "example": "Mesa 1"
                }
            }
        },
        "types.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "types.LoginSuccessResponse": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "types.LoginUserPayload": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "me@me.com"
                },
                "password": {
                    "type": "string",
                    "example": "cum"
                }
            }
        },
        "types.RegisterUserPayload": {
            "type": "object",
            "required": [
                "email",
                "firstName",
                "lastName",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "uri@uri.com"
                },
                "firstName": {
                    "type": "string",
                    "example": "Uri"
                },
                "lastName": {
                    "type": "string",
                    "example": "La creatura de la noche"
                },
                "password": {
                    "type": "string",
                    "maxLength": 130,
                    "minLength": 3,
                    "example": "1234"
                }
            }
        },
        "types.Table": {
            "type": "object",
            "properties": {
                "capacity": {
                    "type": "integer"
                },
                "createdAt": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "types.UpdateTablePayload": {
            "type": "object",
            "properties": {
                "capacity": {
                    "type": "integer",
                    "example": 10
                },
                "name": {
                    "type": "string",
                    "example": "Mesa 1"
                }
            }
        },
        "types.UpdateUserPayload": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "uri@uri.com"
                },
                "firstName": {
                    "type": "string",
                    "example": "Uri"
                },
                "lastName": {
                    "type": "string",
                    "example": "La creatura de la noche"
                },
                "password": {
                    "type": "string",
                    "maxLength": 130,
                    "minLength": 3,
                    "example": "123"
                }
            }
        },
        "types.User": {
            "type": "object",
            "properties": {
                "createdAt": {
                    "type": "string"
                },
                "emal": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "lastName": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Provide your JWT token like: Bearer \u003ctoken\u003e",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}